{
  "name": "s3-browser",
  "private": true,
  "version": "0.1.0",
  "main": ".vite/build/main.js",
  "description": "A simple Electron app to browse S3 buckets",
  "license": "MIT",
  "author": {
    "name": "Tapane Parmar",
    "email": "tapan1359@gmail.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development ELECTRON_ENTRY=main.js VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "start": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && npm run electron:dev\"",
    "start:alt": "vite & sleep 2 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/credential-providers": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "vite": "^4.0.0",
    "wait-on": "^7.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "prune": true,
        "ignore": [
          "^/src",
          "^/public",
          "^/node_modules",
          "^/dist"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "s3-browser"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-vite",
          "config": {
            "build": [
              {
                "entry": "main.js",
                "config": "vite.main.config.js"
              },
              {
                "entry": "preload.js",
                "config": "vite.preload.config.js"
              }
            ],
            "renderer": [
              {
                "name": "main_window",
                "config": "vite.renderer.config.js",
                "preload": {
                  "config": "vite.preload.config.js"
                }
              }
            ]
          }
        }
      ]
    }
  }
}
